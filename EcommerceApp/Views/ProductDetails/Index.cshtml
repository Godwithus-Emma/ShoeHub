@model ProductViewModel


<div class="product-details-page">
    <div class="details-wrapper flex-c">
        <div class="product-details-wrapper flex">
            <div class="mg-a"><img src="@Model.ImgaeUrl"/></div>
            <div class="product-details mg-a">
                <h3 class="product-name">@Model.ProdutcName </h3>
                <div class="flex rating-wrapper mgb-10">
                    <div class="rating">
                        @{
                            int count = 5;
                            int rate = (int)Model.ProductRating;
                            while (count > 0)
                            {
                                if (rate > 0)
                                {
                                    <img src="~/images/star-yellow.png" />
                                    rate--;
                                }
                                else
                                {
                                    <img src="~/images/star.png" />
                                }
                                count--;
                            }
                        }
                    </div>
                    <span class="mgl-10" style="opacity: 0.4"> @((int)Model.ProductRating) review</span>
                    <a href="#" style="margin:0 0 0 40px;">Submit review </a>
                </div>
                <div class="flex price-wrapper mgt-10">
                    <h2 class="mgr-10 active">$@Model.CurrentPrice</h2>
                    <h3 class="mgr-10" style="text-decoration:line-through; opacity:0.4">$@Model.InitialPrice</h3>
                    <h2 class="danger-txt">@Model.Discount% Off </h2>
                </div>
                <div class="flex preview-wrapper mgt-10">
                    <div class="mgr-10" >Availability</div>
                    <div>In stock</div>
                </div>
                <div class="flex preview-wrapper mgt-10 mgb-10">
                    <div class="mgr-10">Category</div>
                    <div>@Model.ProductCategory</div>
                </div>
                <div>Free shipping</div>
            </div>
        </div>
            <a class="mg-a" href="#">Add to cart </a>
    </div>
</div>
